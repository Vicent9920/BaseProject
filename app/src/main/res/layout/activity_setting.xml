<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.SettingActivity">

    <include
            layout="@layout/app_toolbar"/>

    <com.vincent.baseproject.widget.SettingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:bar_leftText="关于我们"
            app:bar_rightIcon="@mipmap/icon_black"/>

    <com.vincent.baseproject.widget.SettingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bar_leftText="检查更新"
            app:bar_rightIcon="@mipmap/icon_black"/>


    <com.vincent.baseproject.widget.SettingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bar_leftText="隐私协议"
            app:bar_rightIcon="@mipmap/icon_black"/>

    <com.vincent.baseproject.widget.SettingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:bar_leftText="清空缓存"
            app:bar_rightText="2.73M"
            app:bar_rightColor="@color/gray"
            app:bar_rightIcon="@mipmap/icon_black"/>

    <com.vincent.baseproject.widget.SettingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:bar_leftText="自动登录"
            app:bar_rightIcon="@mipmap/icon_black">
        <com.vincent.baselibrary.widget.SwitchButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
        />
    </com.vincent.baseproject.widget.SettingBar>

    <com.vincent.baseproject.widget.SettingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:bar_leftText="退出登录"
            app:bar_leftColor="@color/red"/>

</LinearLayout>