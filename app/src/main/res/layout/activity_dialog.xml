<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.DialogActivity">
    <include
            layout="@layout/app_toolbar"/>


    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

            <Button
                    android:id="@+id/btn_dialog_message"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="弹出消息对话框"/>

            <Button
                    android:id="@+id/btn_dialog_bottom_menu"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="弹出底部选择框"/>

            <Button
                    android:id="@+id/btn_dialog_center_menu"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="弹出居中选择框"/>

            <Button
                    android:id="@+id/btn_dialog_succeed_toast"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="弹出完成对话框"/>

            <Button
                    android:id="@+id/btn_dialog_fail_toast"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="弹出错误对话框"/>

            <Button
                    android:id="@+id/btn_dialog_warn_toast"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="弹出警告对话框"/>

            <Button
                    android:id="@+id/btn_dialog_wait"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="弹出加载对话框"/>

            <Button
                    android:id="@+id/btn_dialog_pay"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="弹出支付对话框"/>

            <Button
                    android:id="@+id/btn_dialog_custom"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="弹出自定义对话框"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>